<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.EditTextCoordinate" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="android:inputType">numberSigned|numberDecimal</item>
        <item name="android:hint">@string/coordinates_edit_text_help</item>
    </style>
</resources>
